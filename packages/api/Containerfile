FROM registry.access.redhat.com/ubi9/python-312:latest

USER root

# Build argument to control PyTorch variant (cpu or cuda)
ARG TORCH_VARIANT=cpu

# Set working directory
WORKDIR /app

# Install system dependencies for PostgreSQL and curl
RUN dnf install -y gcc gcc-c++ postgresql-devel curl --allowerasing && dnf clean all

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh && mv ~/.local/bin/uv /usr/local/bin/uv

# Create packages directory structure
RUN mkdir -p /app/packages/api /app/packages/db

# Copy the API package (context is root)
COPY packages/api/ ./packages/api/

# Copy the db package (context is root)
COPY packages/db/ ./packages/db/

# Install Python dependencies using uv with explicit Python binary
# Install PyTorch based on TORCH_VARIANT (cpu for local, cuda for production)
RUN if [ "$TORCH_VARIANT" = "cpu" ]; then \
        echo "Installing PyTorch CPU version (lightweight, ~176MB)..." && \
        uv pip install --python $(which python3) --system --no-cache --index-url https://download.pytorch.org/whl/cpu torch; \
    else \
        echo "Installing PyTorch CUDA version (GPU-enabled, ~800MB)..." && \
        uv pip install --python $(which python3) --system --no-cache torch; \
    fi

# Install DB package first (without torch since we installed it above)
RUN uv pip install --python $(which python3) --system --no-cache -e ./packages/db
# Then install API package with dev dependencies
RUN uv pip install --python $(which python3) --system --no-cache -e ./packages/api[dev]  
# Install psycopg2 for PostgreSQL sync operations (migrations)
RUN uv pip install --python $(which python3) --system --no-cache psycopg2
# Install requests for Keycloak setup script
RUN uv pip install --python $(which python3) --system --no-cache requests

# Set environment variables
ENV PYTHONPATH=/app/packages/api/src

USER 1001

# Expose FastAPI port
EXPOSE 8000

# Start FastAPI server
WORKDIR /app/packages/api
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]